<%- include('partials/head.ejs'); %>
<%- include('partials/navigation.ejs'); %>


<div class="container">
    <div class="row">
        <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">


            <form class="form auth-form mt-4" action="/auth/login" method="post" data-next-url="/user/dashboard">
                <h2 class="text-center mt-1 mb-4">Sign in</h2>

                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control focus-on-page-load" id="email" name="email" placeholder="Enter email">
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
                </div>

                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


<%- include('partials/footer.ejs'); %>